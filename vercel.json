{
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, s-maxage=3600, stale-while-revalidate=86400"
          }
        ]
      },
      {
        "source": "/public/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api" },
      { "source": "^/(?!.*\\.).*$", "destination": "/" }
    ]
  }